@model IEnumerable<AttendanceApp.ViewModel.UserProfileViewModel>
@{
    ViewBag.Title = "ثبت ورود و خروج";
    Layout = "~/Views/Shared/_Layout -UserProfile.cshtml";
}

<h3>@ViewBag.Title</h3>

<div class="row">
    <div class="col-md-3"></div>
    <div class=" col-md-3">
        <a href="@Url.Action("IEntry","User")" class="btn  btn-success"> ثبت ورود</a>
    </div>
    <div class=" col-md-3">
        <a href="@Url.Action("OEntry","User")" class="btn  btn-warning"> ثبت خروج</a>
    </div>
    <div class="col-md-3"></div>

</div>


<div class="row" style="padding-top:50px">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                ورود-خروج
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.fullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.startTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.endTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.isRest)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.iscommited)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.startTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.endTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isRest)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.iscommited)
                                </td>
                                @* <td>

                    @Html.ActionLink("جزییات", "Details", new { id = item.Id }) |

                </td>*@
                            </tr>
                        }
                    </tbody>


                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>





