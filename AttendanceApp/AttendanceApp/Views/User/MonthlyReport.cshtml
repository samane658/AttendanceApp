@model IEnumerable<AttendanceApp.Models.inout>
@using Microsoft.AspNet.Identity
@using MD.PersianDateTime;
@{

    var persianTimeNow = new PersianDateTime(DateTime.Now).ToLongDateString();
    ViewBag.Title = "تایم شیت ماهانه";
    Layout = "~/Views/Shared/_Layout -UserProfile.cshtml";
}

<h3>@ViewBag.Title </h3>



@using (Html.BeginForm("MonthlyReport", "User"))
{
    @Html.AntiForgeryToken()
    <div class="input-group">
        <input id="date-input-start" name="startdate" class="form-control" placeholder=" از تاریخ :" />
        <span class="input-group-addon">
            <span class="fa fa-calendar" data-MdDateTimePicker="true" data-TargetSelector="#date-input-start" data-EnableTimePicker="false" data-englishnumber="true" data-fromdate="true" data-todate="true" data-Placement="bottom" data-Trigger="click"></span>
        </span>
    </div>

    <div class="input-group" style="padding-top:20px">
        <input id="date-input-end" name="enddate" class="form-control" placeholder=" تا تاریخ :" />
        <span class="input-group-addon" data-MdDateTimePicker="true" data-TargetSelector="#date-input-end" data-EnableTimePicker="false" data-englishnumber="true" data-fromdate="true" data-todate="true" data-Placement="bottom" data-Trigger="click">
            <span class="fa fa-calendar"></span>
        </span>
    </div>

    <div class="form-group" style="padding-top:50px">
        <div class="col-md-offset-2 col-md-10">
            @* <a href="@Url.Action("MonthlyReport","User")">*@
            <input type="submit" value="نمایش" class="btn btn-success pull-left" />
            @* </a>*@


        </div>
    </div>

}




<div class="row" style="padding-top:50px">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                تایم شیت ماهانه - @User.Identity.Name
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.date)</th>
                            <th>@Html.DisplayNameFor(model => model.startTime)</th>
                            <th>@Html.DisplayNameFor(model => model.endTime)</th>
                            <th>@Html.DisplayNameFor(model => model.isCommited)</th>
                            <th>@Html.DisplayNameFor(model => model.isRest)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td>
                                    @Html.DisplayFor(modelItem => item.date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.startTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.endTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isCommited)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isRest)
                                </td>


                            </tr>
                        }


                    </tbody>
                </table>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>